<h1 class="text-center  mt-3">Detalle Producto {{this.title}}</h1>

{{#if product}}
        <div class="col">
            <div class="card">
            <img src={{product.thumbnail}} width="50" alt="producto"/>
            <div class="card-body">
                <h5 class="card-title">{{product.title}}</h5>
                <p class="card-text">$ {{product.price}}</p>

                <a href="/productos/editar/{{product.id}}" class="btn btn-primary">Editar</a>
                <a href="/productos/borrar/{{product.id}}" class="btn btn-primary">Borrar</a>
            </div>
            </div>
         </div>
    {{else}}
    <p>No se encontraron datos</p>
{{/if}}


<div class="text-center">
    <a href="/productos" class="btn btn-danger" > <-- Home</a>
</div>